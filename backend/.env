# ============================================
# CONFIGURACIÓN SUPABASE - REEMPLAZAR CON TUS DATOS
# ============================================

# URL de conexión a Supabase
# FORMATO: postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:SecurePass123!@db.YOUR-PROJECT-REF.supabase.co:5432/postgres

# Configuración JWT para autenticación Zero Trust
JWT_SECRET_KEY=tu_clave_super_secreta_minimo_32_caracteres_cambiar_en_produccion
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Configuración de la aplicación
APP_NAME=CyberMonitor-RD
APP_ENVIRONMENT=development
APP_VERSION=1.0.0
DEBUG=True

# Configuración MFA (simulación)
MFA_SIMULATION_ENABLED=True
MFA_CODE_LENGTH=6
MFA_CODE_EXPIRE_MINUTES=5

# Configuración de motor de IA
IA_MODEL_THRESHOLD=0.85  # 85% de confianza para marcar como amenaza
IA_ANOMALY_DETECTION_ENABLED=True

# URLs del frontend para CORS
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Configuración Supabase adicional (opcional para futuras funcionalidades)
SUPABASE_URL=https://YOUR-PROJECT-REF.supabase.co
SUPABASE_ANON_KEY=YOUR-SUPABASE-ANON-KEY
